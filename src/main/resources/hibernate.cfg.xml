<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/customers_products?currentSchema=public</property>
        <property name="connection.username">user</property>
        <property name="connection.password">1234</property>
        <property name="connection.pool_size">8</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="aikam.testTask.losev.entities.Customer"/>
        <mapping class="aikam.testTask.losev.entities.Product"/>
        <mapping class="aikam.testTask.losev.entities.Purchase"/>
    </session-factory>
</hibernate-configuration>
